<div class="m-5 text-center card" >
  <h1>Tabla de productos</h3>
  <table class="table table-hover">
    <thead>
      {{#if products}}
      <tr>
        <th scope="col">ID</th>
        <th scope="col">Titulo</th>
        <th scope="col">Precio</th>
        <th scope="col">Minuatura</th>
        <th scope="col">Comprar</th>
        <th scope="col">Modificar</th>
        <th scope="col">Eliminar</th>
      </tr>
    </thead>
    <tbody>
      {{#each products}}
      <tr>
        <th scope="row">{{this.id}}</th>
        <td>{{this.title}}</td>
        <td>{{this.price}}</td>
        <td><img width="50px" height= "50px" src={{this.thumbnail}} /></td>
        <td><button class="comprar_Id btn btn-success" id="comprar_{{this.id}}">ðŸ›’</button></td>
        <td><button class="modificar_Id btn btn-warning" id="modificar_{{this.id}}" >Modificar</button></td>
        <td><button class="borrar_Id btn btn-danger" id="borrar_{{this.id}}" >Eliminar</button></td>
        <td></td>
        </tr>
      {{/each}}
       {{else}}
          <p id="products_empty" style="color:red">No posee productos ingresados</p>
      {{/if}}
    </tbody>
  </table>
</div>